<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="create_rules_table" author="Filipp">
        <createTable tableName="rules">
            <column autoIncrement="true" name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="rule_name" type="varchar(64)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="min_salary" type="bigint">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="max_salary" type="bigint">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="creation_date" type="timestamp(6)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="last_update" type="timestamp(6)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="is_active" type="tinyint(1)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="product_type" type="varchar(255)">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>